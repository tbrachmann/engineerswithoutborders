<div class="section">
  <div class="col-md-12">
    <h2 class="card-title text-center">Listing Projects</h2>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">

        <% if can? :read, :all %>
          <p><%= link_to "Create New Project", new_project_path, class: "btn btn-md btn-success" %></p>
        <% end %>

        <hr>
        <ul>
        <% @projects.each do |project| %>
        <li>
          <h4><a href="<%= project_path(project.id) %>" ><%= project.name %></a></h4>
          <p><%= project.description %><p>
          </p>
          </p>
         </li>
        <% end %>

        <%= paginate @projects %>
      </div>
    </div>
  </div>
</div>