<div class="row section">
	<div class="section col-md-8 col-md-offset-2">
		<h2 class="title text-center">Log in</h2>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true, class: "form-control" %>
		    <%= f.input :password, required: false %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Log in", class:"btn sqs-block-btn btn-black btn-md" %>
		  </div>
		<% end %>
		
	</div>
</div>


