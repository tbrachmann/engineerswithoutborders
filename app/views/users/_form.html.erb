<div class="row section">
  <div class="col-md-10 col-md-offset-1 section">
    <%= simple_form_for @user do |f| %>
      <fieldset>
      <legend>Background Information</legend>
      <div class="row">
        <!--Basic Info-->
        <div class="col-md-5">
        <%= f.input :first_name, label: "First Name:" %>
        </div>
        <div class="col-md-5">
        <%= f.input :last_name, label: "Last Name:" %>
        </div>
        <div class="col-md-2">
        <%= f.input :age, collection:  15 .. 100 %>
        </div>
      </div>
      <div class="row">
      <!--Education and background-->
        <div class="col-md-3">
          <%= f.input :education, label: "Education:", collection: @education_choices %>
        </div>
        <div class="col-md-3">
          <%= f.input :school, label:"Name of University/College:" %>
        </div>
        <div class="col-md-3">
          <%= f.input :expertise, label:"Field of Study or Expertise:", collection: @field_choices %>
        </div>
        <div class="col-md-3">
          <%= f.input :certifications, label:"Certifications Related to Field:", collection: @certificate_choices %>
        </div>
      </div>
      <div class="row">
        <!--Outreach Information-->
        <div class="col-md-6">
          <%= f.input :phone, label: "Phone Number:" %>
        </div>
      </div>
      <div class="row">
      <!--Languages-->
          <div class="col-lg-12">
            <p>If you have proficiency in other languages than English, please indicate below:</p>
          </div>
          <div class="col-md-4">
            <%= f.input :lang1, label:"First Language:", collection: LanguageList::COMMON_LANGUAGES %>
          </div>
          <div class="col-md-6">
            <%= f.input :lang1_fluency, label:"First Language Fluency:", collection: @proficiency_choices %>
          </div>
          <div class="col-md-4">
            <%= f.input :lang2, label:"Second Language:", collection: LanguageList::COMMON_LANGUAGES  %>
          </div>
          <div class="col-md-6">
            <%= f.input :lang2_fluency, label:"Second Language Fluency:", collection: @proficiency_choices %>
          </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.input :time_commitment, label: "Please indicate how much time you are interested in volunteering:", collection: @time_commitment_choices %>
        </div>
        <div class="col-md-12">
          <%= f.input :travel, label: "Please indicate whether or not you can travel:", collection: @travel_availability %>
        </div>
    
        <!--availability-->
        <p>Please describe your general availability on a weekly basis.</p>
    
        <div class="col-md-3">
          <%= f.input :sunday_availability, label: "Sunday:", collection: @availability_choices %>
        </div>
        <div class="col-md-3">
          <%= f.input :monday_availability, label: "Monday:", collection: @availability_choices %>
        </div>
        <div class="col-md-3">
          <%= f.input :tuesday_availability, label: "Tuesday:", collection: @availability_choices %>
        </div>
        <div class="col-md-3">
          <%= f.input :wednesday_availability, label: "Wednesday:", collection: @availability_choices %>
        </div>
        <div class="col-md-3">
          <%= f.input :thursday_availability, label: "Thursday:", collection: @availability_choices %>
        </div>
        <div class="col-md-3">
          <%= f.input :friday_availability, label: "Friday:", collection: @availability_choices %>
        </div>
        <div class="col-md-3">
          <%= f.input :saturday_availability, label: "Saturday:", collection: @availability_choices %>
        </div>
        <div class="col-md-12">
          <%= f.input :availability_comments, label: "Anything else we should know about your availability?" %>
        </div>
      </div>
      <!-- other details -->
      <div class="row">
        <div class="col-xl-12">
          <%= simple_form_for @user do |f| %>
            <%= f.association :skills %>
          <% end %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-12">
        <%= f.input :description, label: "About:", as: :text, hint: "Please tell us very briefly a little about yourself and why you want to volunteer for Engineers without Borders.", :input_html => {:style => 'width: 100%', :rows => 4, class: 'response-project'} %>
        </div>
      </div>
      <%= f.button :submit, "Update Background", class: "btn btn-sm sqs-block-btn btn-black"%>
      </fieldset>
      <p></p>
      <fieldset>
      <legend>Account Information</legend>
      <%= f.input :email, disabled: true %>
      <%= link_to "Change Email or Password", edit_user_registration_path, class: "btn btn-sm sqs-block-btn btn-black" %>
      </fieldset>
    <% end %>
    <p></p>
  </div>
</div>