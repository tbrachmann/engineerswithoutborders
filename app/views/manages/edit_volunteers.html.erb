<style>
  .ms-container {
  zoom: 1.5;
  }

  .search-input {
  width: 100%;
  }
  
</style>

<div class="row section">
  <div class="col-md-8 col-md-offset-2 section">

    <div>
      <h2 class="text-center">Editing Volunteers on <%= @project.name%></h2>
    </div>

    <div id="success" hidden>
      <div class="volunteer-emails-box text-center">
	Volunteers updated!
      </div>
      <br>
    </div>

    <center id="edit_volunteers">
      <select multiple="multiple" id="volunteers-select" name="my-select[]">
	<% @project.volunteers.each do |volunteer| %>
	  <option id="<%= volunteer.id %>" value="<%= volunteer.name %>" selected>
	    <%= volunteer.name %>
	  </option>
	<% end %>
	<% @eligible_volunteers.each do |volunteer| %>
	  <option id="<%= volunteer.id %>" value="<%= volunteer.name %>">
	    <%= volunteer.name %>
	  </option>
	<% end %>
      </select>
      <br>
      <a class="btn btn-md sqs-block-btn btn-black" id="volunteers-submit">Save</a>
    </center>
  </div>
</div>
