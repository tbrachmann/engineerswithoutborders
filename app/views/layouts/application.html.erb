<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="bg-color">
    <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top nav-shadow" style="background-color: white">
      <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><%= image_tag("ewb-sfp-logo.png", height:"32") %></a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
          <%= link_to("Home", root_path, class:"glyphicon glyphicon-home") %></a>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to("Profile", user_path(current_user), class:"nav-link") %></a>
          </li>
          <li class="nav-item">
            <%= link_to("Project Listings", projects_path, class:"nav-link") %></a>
          </li>
          <% if can? :read, :all %>
          <li class="nav-item">
            <%= link_to("Find Volunteers", users_path, class:"nav-link") %></a>
          </li>
          <% end %>
          <li class="nav-item" style="float: right;">
            <%= link_to("Logout", destroy_user_session_path, method: :delete, class:"nav-link") %></a>
          </li>
          <li class="nav-item" style="float: right;">
            <div class="nav-link">Signed in as <strong><%= current_user.email %></strong></div>
          </li>
        <% else %>
        <li>
          <%= link_to("Login", user_session_path, class:"nav-item glyphicon glyphicon-log-in") %></a>
        </li>
        <% end %> 
      </ul>
      </div>
  </nav>
</div>
    <div class="container fill">
      <div class="col-md-10 col-md-offset-1 fill">
      <div class="section fill">
        <div class="col-md-12">
          <div class="card">
          <%= yield %>
          </div>
        </div>
    </div>
    </div>
    </div>
  </body>
</html>


