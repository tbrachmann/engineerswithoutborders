<!DOCTYPE html>
<html>
  <style>
    .wrapper {
    width: 1325px;
}
  </style>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <div class="wrapper">
    <nav class="navbar navbar-fixed-top" style="background-color: #ededed">
      <a class="navbar-brand" href="#"><%= image_tag("ewb-sfp-logo.png", height:"32") %></a>
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <%= link_to("Home", root_path, class:"nav-link") %></a>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to("Profile", user_path(current_user), class:"nav-link") %></a>
          </li>
          <li class="nav-item">
            <%= link_to("Project Listings", projects_path, class:"nav-link") %></a>
          </li>
          <% if can? :read, :all %>
          <li class="nav-item">
            <%= link_to("Find Volunteers", users_path, class:"nav-link") %></a>
          </li>
          <% end %>
          <li class="nav-item" style="float: right;">
            <%= link_to("Logout", destroy_user_session_path, method: :delete, class:"nav-link") %></a>
          </li>
          <li class="nav-item" style="float: right;">
            <div class="nav-link">Signed in as <strong><%= current_user.email %></strong></div>
          </li>
        <% else %>
        <li class="nav-item" style="float: right;">
          <%= link_to("Login", user_session_path, class:"nav-link") %></a>
        </li>
        <% end %> 
      </ul>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
    
    <div class="container">
      <div class="row">
        <% if notice %>
        <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert %>
        <p class="alert alert-warning"><%= alert %></p>
        <% end %>
        <% if flash[:warning] %>
        <p class="alert alert-danger"><%= flash[:warning] %></p>
        <% end %>
      </div>
    </div>
    </div>
  </body>
  <!--[if gte IE 9]>
  <style type="text/css">
    .gradient {
       filter: none;
    }
  </style>
<![endif]-->
</html>


